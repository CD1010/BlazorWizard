@page "/wizarddemo"
<Wizard  Id="DemoWizard">
    <WizardStep  Name="First Step" Enabled="true">
        <div class="row">        
            <FirstStep></FirstStep>
        </div>
    </WizardStep>
    <WizardStep @ref="Step2" Name="Second Step" Enabled="@step2Enabled">
        <div class="row">
            <p>Wow, you've reached the second step!</p>
        </div>
    </WizardStep>
    <WizardStep Name="Final Step" Enabled="true">
        <div class="row">
      <p>The final step has been reached. Thank you \o/</p>
        </div>
    </WizardStep>
</Wizard>
<Blazorise.CheckEdit CheckedChanged="OnCheck">Remove Step</Blazorise.CheckEdit>
@code {
    Wizard TheWizard { get; set; }
    WizardStep Step2;

    bool step2Enabled;
    void OnCheck()
    {
        step2Enabled = !step2Enabled;
        //Step2.SetEnabled(step2Enabled);
    }
}